{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noUnusedParameters": false,
    "pretty": true,
    "paths": {
      "@/*": ["./src/*"],
      "@typings/*": ["./typings/*"]
    },
    "types": [
      "typeorm",
      "routing-controllers",
      "typedi",
      "typeorm-typedi-extensions",
      "dotenv",
      "node",
      "express",
      "jest"
    ]
  },
  "include": ["./src/**/*.ts", "./tests/**/*.spec.ts"]
}
