  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Node in Docker",
      "type": "node",
      "request": "attach",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/var/www/html",
      "protocol": "inspector",
      "restart": true,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "/var/www/html/*": "${workspaceRoot}/*"
      }
    }
  ]
}
